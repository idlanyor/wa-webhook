<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/head', { title: 'Template Pesan' }) %>
    <style>
        textarea { min-height: 160px; }
    </style>
    </head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen">
    <div class="flex min-h-screen">
        <%- include('partials/sidebar') %>
        <div class="flex-1 flex flex-col lg:ml-0">
            <%- include('partials/navbar', { title: 'Template Pesan' }) %>
            <main class="flex-1 p-4 sm:p-6 lg:p-8">
                <div class="max-w-6xl mx-auto space-y-6">
                    <% if (error) { %>
                        <div class="p-4 bg-red-50 border border-red-200 text-red-700 rounded-xl"><%= error %></div>
                    <% } %>
                    <% if (success) { %>
                        <div class="p-4 bg-green-50 border border-green-200 text-green-700 rounded-xl"><%= success %></div>
                    <% } %>

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Buat Template Baru</h3>
                            <form action="/templates/create" method="POST" class="space-y-3">
                                <div>
                                    <label class="block text-sm text-gray-700 mb-1">Nama Template</label>
                                    <input name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Contoh: Promo Lebaran"/>
                                </div>
                                <div>
                                    <label class="block text-sm text-gray-700 mb-1">Isi Pesan</label>
                                    <textarea name="content" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Halo {name}, kami punya penawaran khusus untuk Anda."></textarea>
                                    <p class="text-xs text-gray-500 mt-2">Variabel yang didukung: {name}, {phone}</p>
                                </div>
                                <div class="flex justify-end">
                                    <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Simpan</button>
                                </div>
                            </form>
                        </div>

                        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Daftar Template</h3>
                            <div class="space-y-3">
                                <% if (templates.length === 0) { %>
                                    <div class="text-gray-500">Belum ada template.</div>
                                <% } %>
                                <% templates.forEach(t => { %>
                                    <div class="border border-gray-200 rounded-xl p-4">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <div class="font-semibold text-gray-800"><%= t.name %></div>
                                                <div class="text-sm text-gray-600 whitespace-pre-wrap mt-1"><%= t.content %></div>
                                            </div>
                                            <div class="flex items-center space-x-2">
                                                <button class="px-3 py-1 text-sm bg-gray-100 rounded hover:bg-gray-200" onclick="prefillTemplate(<%- JSON.stringify(t.id) %>, <%- JSON.stringify(t.name) %>, <%- JSON.stringify(t.content) %>)" type="button">Ubah</button>
                                                <button class="px-3 py-1 text-sm bg-blue-600 text-white rounded hover:bg-blue-700" type="button" onclick="useInBlaster(<%- JSON.stringify(t.id) %>)">Gunakan di Blaster</button>
                                                <form action="/templates/delete/<%= t.id %>" method="POST" data-confirm="Hapus template ini?" class="inline">
                                                    <button class="px-3 py-1 text-sm bg-red-500 text-white rounded hover:bg-red-600" type="submit">Hapus</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script>
        function prefillTemplate(id, name, content){
            const form = document.querySelector('form[action="/templates/create"]');
            form.setAttribute('action', '/templates/update/' + id);
            form.querySelector('[name="name"]').value = name;
            form.querySelector('[name="content"]').value = content;
        }

        function useInBlaster(id){
            try { localStorage.setItem('selectedTemplateId', id); } catch {}
            window.location.href = '/blaster';
        }
    </script>
    <%- include('partials/simple-scripts') %>
</body>
</html>
