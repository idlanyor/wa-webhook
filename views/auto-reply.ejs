<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/head', { title: 'Pengaturan Bot WhatsApp' }) %>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <div class="flex min-h-screen">
        <%- include('partials/sidebar') %>
        <div class="flex-1 flex flex-col">
            <%- include('partials/navbar', { title: 'Pengaturan Bot WhatsApp' }) %>
            <main class="flex-1 p-6">
                <div class="max-w-7xl mx-auto space-y-6">
                <!-- Global Bot Toggle -->
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <h3 class="card-title">Status Bot</h3>
                                <p class="card-description">Aktifkan/nonaktifkan seluruh bot balas otomatis.</p>
                            </div>
                            <i class="ri-settings-3-line text-xl text-gray-500"></i>
                        </div>
                        <div class="card-content">
                            <form action="/auto-reply/settings" method="POST" id="settingsForm" class="flex justify-between items-center">
                                <label for="auto_reply_enabled" class="text-sm font-medium text-gray-700">Aktifkan Bot</label>
                                <div class="relative inline-block w-12 h-6 transition duration-200 ease-in-out bg-gray-200 rounded-full cursor-pointer">
                                    <input type="checkbox" name="auto_reply_enabled" id="auto_reply_enabled" <%= settings.auto_reply_enabled === 'true' ? 'checked' : '' %> onchange="document.getElementById('settingsForm').submit()" class="absolute w-6 h-6 transition duration-200 ease-in-out transform bg-white border-2 border-gray-300 rounded-full cursor-pointer checked:translate-x-6 checked:bg-blue-600 checked:border-blue-600">
                                </div>
                            </form>
                        </div>
                    </div>

                <!-- Add New Rule -->
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <h3 class="card-title">Tambah Aturan Balas Otomatis Baru</h3>
                                <p class="card-description">Buat kata kunci baru dan balasan yang sesuai.</p>
                            </div>
                            <i class="ri-add-line text-xl text-gray-500"></i>
                        </div>
                        <div class="card-content">
                            <form action="/auto-reply/add" method="POST">
                                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label for="keyword" class="block text-sm font-medium text-gray-700">Kata Kunci</label>
                                        <input type="text" name="keyword" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="contoh: info">
                                    </div>
                                    <div class="space-y-2">
                                        <label for="reply" class="block text-sm font-medium text-gray-700">Pesan Balasan</label>
                                        <input type="text" name="reply" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Pesan yang akan dikirim sebagai balasan">
                                    </div>
                                </div>
                                <div class="flex justify-end mt-6">
                                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                        <i class="ri-save-line mr-2"></i>
                                        <span>Simpan Aturan</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                <!-- Rules List -->
                    <div class="card col-span-full">
                        <div class="card-header">
                             <div>
                                <h3 class="card-title">Daftar Aturan Balas Otomatis</h3>
                                <p class="card-description">Kelola balasan berdasarkan kata kunci yang sudah ada.</p>
                            </div>
                            <i class="ri-list-settings-line text-xl text-gray-500"></i>
                        </div>
                        <div class="card-content">
                            <div class="overflow-x-auto">
                                <table class="w-full border-collapse">
                                    <thead>
                                        <tr class="border-b border-gray-200">
                                            <th class="text-left py-3 px-4 font-medium text-gray-700">Status</th>
                                            <th class="text-left py-3 px-4 font-medium text-gray-700">Kata Kunci</th>
                                            <th class="text-left py-3 px-4 font-medium text-gray-700">Balasan</th>
                                            <th class="text-left py-3 px-4 font-medium text-gray-700">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (replies.length > 0) { %>
                                            <% replies.forEach(rule => { %>
                                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                                    <td class="py-3 px-4">
                                                        <a href="/auto-reply/toggle/<%= rule.id %>" class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full <%= rule.enabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                            <%= rule.enabled ? 'On' : 'Off' %>
                                                        </a>
                                                    </td>
                                                    <td class="py-3 px-4 font-mono text-sm"><%= rule.keyword %></td>
                                                    <td class="py-3 px-4 text-sm"><%= rule.reply %></td>
                                                    <td class="py-3 px-4">
                                                            <form action="/auto-reply/delete/<%= rule.id %>" method="POST" data-confirm="Hapus aturan ini?" class="inline">
                                                            <button type="submit" class="inline-flex items-center p-1 text-red-600 hover:bg-red-50 rounded">
                                                                <i class="ri-delete-bin-line text-lg"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="py-8 px-4 text-center text-gray-500">Belum ada aturan yang dikonfigurasi.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <!-- Mobile menu overlay -->
    <div id="mobileMenuOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>

    <%- include('partials/simple-scripts') %>
</body>
</html> 
