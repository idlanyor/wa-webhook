<div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 card-hover transition-all duration-300">
    <div class="flex items-center justify-between mb-6">
        <div class="flex-1">
            <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-lg font-semibold text-gray-800">Status Koneksi</h3>
                <div id="statusIndicator" class="w-3 h-3 rounded-full bg-gray-400 status-pulse"></div>
            </div>
            <p class="text-sm text-gray-600">Pemantauan koneksi WhatsApp secara real-time</p>
            <div id="socketStatus" class="text-xs mt-1 text-gray-500">Socket: Menghubungkan…</div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl flex items-center justify-center shadow-inner">
            <i id="statusIcon" class="ri-signal-wifi-line text-blue-600 text-2xl"></i>
        </div>
    </div>

    <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl">
            <div>
                <div class="text-xl font-bold transition-colors duration-300" id="connectionStatus">Menghubungkan…</div>
                <div id="statusMessage" class="text-sm text-gray-600 mt-1">Memuat status koneksi…</div>
            </div>
            <button id="refreshBtn" type="button" class="inline-flex items-center space-x-2 px-3 py-2 bg-white border border-gray-200 rounded-lg text-gray-700 hover:bg-gray-50 hover:border-gray-300 transition-colors">
                <span id="refreshText"><i class="ri-refresh-line"></i> <span>Refresh Status</span></span>
            </button>
        </div>

        <!-- Connection metrics -->
        <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 bg-blue-50 rounded-xl">
                <div class="text-lg font-semibold text-blue-700" id="uptime">--</div>
                <div class="text-xs text-blue-600">Waktu Aktif</div>
            </div>
            <div class="text-center p-3 bg-green-50 rounded-xl">
                <div class="text-lg font-semibold text-green-700" id="messageCount">--</div>
                <div class="text-xs text-green-600">Pesan</div>
            </div>
        </div>
    </div>
</div>
