<style>
    /* Custom styles for connection status colors */
    #connectionStatus.connected {
        @apply text-green-600;
    }
    
    #connectionStatus.disconnected {
        @apply text-red-600;
    }
    
    #connectionStatus.qr_ready {
        @apply text-yellow-600;
    }
    
    /* Loading spinner animation */
    .loading {
        @apply inline-block w-5 h-5 border-2 border-gray-300 border-t-green-500 rounded-full animate-spin;
    }
    
    /* Message item styling */
    .message-item {
        @apply bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500;
    }
    
    .message-from {
        @apply font-semibold text-gray-800 mb-1;
    }
    
    .message-text {
        @apply text-gray-600;
    }
    
    .message-time {
        @apply text-xs text-gray-500 mt-2;
    }

    /* Prevent horizontal overflow globally */
    html, body {
        max-width: 100%;
        overflow-x: hidden;
        position: relative;
    }
    
    * {
        box-sizing: border-box;
    }
