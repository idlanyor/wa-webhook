<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/head', { title: 'Kampanye Terjadwal' }) %>
</head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen">
    <div class="flex min-h-screen">
        <%- include('partials/sidebar') %>
        <div class="flex-1 flex flex-col lg:ml-0">
            <%- include('partials/navbar', { title: 'Kampanye Terjadwal' }) %>
            <main class="flex-1 p-4 sm:p-6 lg:p-8">
                <div class="max-w-6xl mx-auto space-y-6">
                    <% if (error) { %>
                        <div class="p-3 bg-red-50 border border-red-200 text-red-700 rounded-xl"><%= error %></div>
                    <% } %>
                    <% if (success) { %>
                        <div class="p-3 bg-green-50 border border-green-200 text-green-700 rounded-xl"><%= success %></div>
                    <% } %>

                    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Buat Kampanye</h3>
                        <form action="/campaigns/create" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm text-gray-700 mb-1">Nama Kampanye</label>
                                <input name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="Contoh: Promo Mingguan"/>
                            </div>
                            <div>
                                <label class="block text-sm text-gray-700 mb-1">Waktu Mulai</label>
                                <input type="datetime-local" name="startAt" required class="w-full px-3 py-2 border border-gray-300 rounded-lg"/>
                            </div>
                            <div>
                                <label class="block text-sm text-gray-700 mb-1">Template (opsional)</label>
                                <select name="templateId" class="w-full px-3 py-2 border border-gray-300 rounded-lg" id="templateSelect">
                                    <option value="">— Tidak pakai template —</option>
                                </select>
                            </div>
                            <div class="grid grid-cols-2 gap-2">
                                <div>
                                    <label class="block text-sm text-gray-700 mb-1">Throttle Min (ms)</label>
                                    <input type="number" name="throttleMin" value="2000" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg"/>
                                </div>
                                <div>
                                    <label class="block text-sm text-gray-700 mb-1">Throttle Max (ms)</label>
                                    <input type="number" name="throttleMax" value="7000" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg"/>
                                </div>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm text-gray-700 mb-1">Pesan (abaikan jika pakai template)</label>
                                <textarea name="message" class="w-full px-3 py-2 border border-gray-300 rounded-lg" rows="5" placeholder="Isi pesan jika tidak memakai template"></textarea>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm text-gray-700 mb-1">Nomor Tujuan (satu per baris)</label>
                                <textarea name="numbers" class="w-full px-3 py-2 border border-gray-300 rounded-lg font-mono text-sm" rows="6" placeholder="6281234567890"></textarea>
                            </div>
                            <div class="md:col-span-2 flex justify-end">
                                <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">Jadwalkan</button>
                            </div>
                        </form>
                    </div>

                    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Daftar Kampanye</h3>
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-2 px-3">Nama</th>
                                        <th class="text-left py-2 px-3">Mulai</th>
                                        <th class="text-left py-2 px-3">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (!campaigns || campaigns.length === 0) { %>
                                        <tr><td colspan="3" class="py-6 text-center text-gray-500">Belum ada kampanye.</td></tr>
                                    <% } else { %>
                                        <% campaigns.forEach(c => { %>
                                            <tr class="border-b border-gray-100">
                                                <td class="py-2 px-3"><%= c.name %></td>
                                                <td class="py-2 px-3"><%= new Date(c.start_at).toLocaleString() %></td>
                                                <td class="py-2 px-3"><%= c.status %></td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script>
        // load templates
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                const sel = document.getElementById('templateSelect');
                const resp = await fetch('/templates/api');
                const templates = await resp.json();
                templates.forEach(t => {
                    const opt = document.createElement('option');
                    opt.value = t.id;
                    opt.textContent = t.name;
                    sel.appendChild(opt);
                });
            } catch {}
        });
    </script>
    <%- include('partials/simple-scripts') %>
</body>
</html>

